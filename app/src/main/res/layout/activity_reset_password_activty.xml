<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manjooralam.flashdelivery.activities.AboutUsActivity$LoginActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.manjooralam.flashdelivery.activities.SignUpActivity"
        android:orientation="vertical">
        <include layout="@layout/layout_toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView1"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:visibility="invisible"
                android:text="New Password"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_small"
                android:id="@+id/t_reset_email"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:id="@+id/mail_reset_edit"
                android:hint="New Password"
                android:textSize="@dimen/txt_large"
                android:textColor="@color/colorPrimary"
                android:background="@null"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:lines="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080"
                android:layout_marginTop="@dimen/dp_3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:visibility="invisible"
                android:text="Conform Password"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_small"
                android:id="@+id/t_reset_password"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:id="@+id/password_reset_edit"
                android:hint="Conform Password"
                android:textSize="@dimen/txt_large"
                android:textColor="@color/colorPrimary"
                android:background="@null"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:lines="1"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080"
                android:layout_marginTop="@dimen/dp_3"/>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="Submit"
                android:textSize="@dimen/txt_extra_large"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_35"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:id="@+id/t_reset_login"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
