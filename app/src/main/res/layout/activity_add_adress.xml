<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.manjooralam.flashdelivery.activities.Contact_us"
    android:animateLayoutChanges="true">
    <include layout="@layout/layout_toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your First Name"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/colorPrimary"
            android:visibility="invisible"
            android:id="@+id/tname"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/et_name"
            android:hint="Your First Name"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:inputType="textCapWords"
            android:lines="1"
            android:imeOptions="actionNext"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTextNormal"
            android:layout_marginTop="@dimen/dp_3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="Last Name"
            android:layout_marginTop="@dimen/dp_18"
            android:textColor="@color/colorPrimary"
            android:visibility="invisible"
            android:id="@+id/tlast_name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/lastname_edit"
            android:hint="Last Name"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:imeOptions="actionNext"
            android:lines="1"
            android:inputType="textCapWords"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginTop="@dimen/dp_3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:visibility="invisible"
            android:text="Address 1"
            android:layout_marginTop="@dimen/dp_18"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tadress1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/adress1_edit"
            android:hint="Your Address 1"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:inputType="textCapWords"
            android:imeOptions="actionNext"
            android:lines="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginTop="@dimen/dp_3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:visibility="invisible"
            android:text="Address2"
            android:layout_marginTop="@dimen/dp_18"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tadress2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/adress2_edit"
            android:hint="Your Address 2"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:inputType="textCapWords"
            android:imeOptions="actionNext"
            android:lines="1"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginTop="@dimen/dp_3"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_shape"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Your City"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:drawableRight="@drawable/ic_down"
                android:paddingLeft="@dimen/dp2_10"
                android:id="@+id/tselectcity"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Pin"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/colorPrimary"
            android:visibility="invisible"
            android:id="@+id/tpin"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/pin_edit"
            android:hint="Pin Code"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:inputType="number"
            android:imeOptions="actionNext"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTextNormal"
            android:layout_marginTop="@dimen/dp_3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="Submit"
            android:textSize="@dimen/txt_extra_large"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_35"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:id="@+id/tsubmit"/>

    </LinearLayout>
</LinearLayout>
