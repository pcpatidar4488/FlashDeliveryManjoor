<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manjooralam.flashdelivery.activities.FeaturedProductActivity"
    android:orientation="vertical"
    android:id="@+id/ll_rootlayout">
    <include layout="@layout/layout_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_search"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/txt_large"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/drawable_shape_arrival"
            android:layout_marginRight="@dimen/dp_15"
            android:drawableLeft="@drawable/ic_search_arrival"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:id="@+id/tv_search"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_item">
        </android.support.v7.widget.RecyclerView>

        <include layout="@layout/layout_progressbar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/progressbar"
            android:visibility="gone"/>
    </RelativeLayout>


</LinearLayout>
