<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manjooralam.flashdelivery.activities.SignUpActivity"
    android:orientation="vertical">
    <include layout="@layout/layout_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
       >
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_pic"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/ic_flashdev_logo"
        />
    <ImageView
        android:id="@+id/iv_add_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camera_alt_white_24dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/drawable_background_camera_signup"
        android:padding="@dimen/dp_5"/>
</FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_enter_detail"
            android:gravity="center"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_small"
            android:visibility="invisible"
            android:id="@+id/tname"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/et_full_name"
            android:hint="@string/s_full_name"
            android:textSize="@dimen/txt_large"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:inputType="textCapWords"
            android:lines="1"
            android:imeOptions="actionNext"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTextNormal"
            android:layout_marginTop="@dimen/dp_3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="Mail"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_small"
            android:visibility="invisible"
            android:id="@+id/tlast_name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/et_email"
            android:hint="Email"
            android:textSize="@dimen/txt_large"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:imeOptions="actionNext"
            android:lines="1"
            android:inputType="textEmailAddress"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginTop="@dimen/dp_3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:visibility="invisible"
            android:text="Mobile"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_small"
            android:id="@+id/tadress1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/et_mobile"
            android:hint="Mobile Number"
            android:textSize="@dimen/txt_large"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:lines="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginTop="@dimen/dp_3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:visibility="invisible"
            android:text="Password"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_small"
            android:id="@+id/tadress2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/et_password"
            android:hint="Password"
            android:textSize="@dimen/txt_large"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:inputType="textCapWords"
            android:imeOptions="actionNext"
            android:lines="1"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginTop="@dimen/dp_3"/>


      
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conform Password"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_small"
            android:visibility="invisible"
            android:id="@+id/tpin"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/conform_edit"
            android:hint="Conform Password"
            android:textSize="@dimen/txt_large"
            android:textColor="@color/colorPrimary"
            android:background="@null"
            android:inputType="textCapWords"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTextNormal"
            android:layout_marginTop="@dimen/dp_3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="Signup"
            android:textSize="@dimen/txt_extra_large"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_35"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:id="@+id/tsubmit"
            android:textAllCaps="true"/>


    </LinearLayout>
</LinearLayout>
